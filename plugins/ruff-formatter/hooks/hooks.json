{
  "description": "Auto-format Python files with ruff after Edit/Write",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/format_python.py"
          }
        ]
      }
    ]
  }
}
